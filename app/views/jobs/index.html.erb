<h1>Job List</h3>
<% @jobs.uniq.each do |job| %>
  <div class="job_listing">
      <div class="job_post">
        <img class="job_img">
        <div class="job_details">
            <h2 class="job_name"><%= job.name %></h2>
            <h3 class="job_lister"><%= job.lister.name %></h3>
            <h4 class="job_distance"><%= job.distance %> min away</h4>
            <p class="job_description"><%= job.description %></p>
        </div>
        <%= button_to "Apply", apply_job_path(job), class: "job_apply", method: :get %>
        <h5 class="job_price"><%= job.cost %></h5>
      </div>
  </div>
<% end %>